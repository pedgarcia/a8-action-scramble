;------------------------------------------------------------------------------
; MAIN LOOP
;------------------------------------------------------------------------------

PROC MAINLOOP=*()
  DO
    RSYNC(8)
    [RBARON]
    IF HSCROLI=$B THEN
      TERRAIN()

      COARSEI==+1
      IF COARSEI=6 THEN CHBAS==+4 FI
      IF COARSEI=8 THEN CHBAS==+4 FI
      IF COARSEI=14 THEN CHBAS==-4 FI
      IF COARSEI=16 THEN CHBAS==-4 COARSEI=0 FI

    FI
    [RBAROFF]
  OD
RET
